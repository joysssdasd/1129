/* iOS 风格发布页 */
.container {
  min-height: 100vh;
  background-color: #F2F2F7;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 分段控制器 (Segmented Control) */
.segment-control-container {
  padding: 24rpx 32rpx;
  background-color: #F2F2F7;
}

.segment-control {
  display: flex;
  background-color: rgba(118, 118, 128, 0.12);
  border-radius: 16rpx;
  padding: 4rpx;
  height: 64rpx;
}

.segment-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #000000;
  border-radius: 14rpx;
  transition: all 0.2s;
}

.segment-item.active {
  background-color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.12);
  font-weight: 600;
}

/* 风险提示 */
.risk-notice {
  margin: 0 32rpx 16rpx;
  padding: 16rpx 24rpx;
  background-color: rgba(255, 149, 0, 0.1);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #FF9500;
  display: flex;
  align-items: center;
}

/* 底部按钮栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid rgba(60, 60, 67, 0.1);
  z-index: 100;
}

.publish-btn {
  background-color: #007AFF;
  color: #FFFFFF;
  border-radius: 20rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
}

.publish-btn:active {
  opacity: 0.8;
}

.publish-btn[disabled] {
  background-color: #8E8E93;
  opacity: 0.6;
}