/* iOS 风格发布页 - 科技感设计 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F8F9FA 0%, #F2F2F7 100%);
  padding: 24rpx;
  padding-bottom: 200rpx;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 20rpx;
}

.title-icon {
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #007AFF 0%, #5856D6 100%);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* 交易类型 */
.type-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 0;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid rgba(60, 60, 67, 0.1);
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.type-item:active {
  transform: scale(0.95);
}

.type-item.active {
  border-width: 3rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.type-item.buy.active {
  background: linear-gradient(135deg, rgba(52, 199, 89, 0.1) 0%, rgba(48, 209, 88, 0.1) 100%);
  border-color: #34C759;
}

.type-item.sell.active {
  background: linear-gradient(135deg, rgba(255, 59, 48, 0.1) 0%, rgba(255, 69, 58, 0.1) 100%);
  border-color: #FF3B30;
}

.type-item.long.active {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.1) 0%, rgba(10, 132, 255, 0.1) 100%);
  border-color: #007AFF;
}

.type-item.short.active {
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.1) 0%, rgba(255, 159, 10, 0.1) 100%);
  border-color: #FF9500;
}

.type-icon-wrap {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.buy .type-icon-wrap { background: rgba(52, 199, 89, 0.15); }
.sell .type-icon-wrap { background: rgba(255, 59, 48, 0.15); }
.long .type-icon-wrap { background: rgba(0, 122, 255, 0.15); }
.short .type-icon-wrap { background: rgba(255, 149, 0, 0.15); }

.type-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.buy-icon::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 16rpx;
  border: 3rpx solid #34C759;
  border-radius: 4rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.sell-icon::before {
  content: '¥';
  font-size: 24rpx;
  font-weight: 700;
  color: #FF3B30;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.long-icon::before,
.long-icon::after {
  content: '';
  position: absolute;
  background: #007AFF;
}

.long-icon::before {
  width: 3rpx;
  height: 20rpx;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.long-icon::after {
  width: 12rpx;
  height: 12rpx;
  border-left: 3rpx solid #007AFF;
  border-top: 3rpx solid #007AFF;
  background: transparent;
  top: 2rpx;
  left: 50%;
  transform: translateX(-50%) rotate(45deg);
}

.short-icon::before,
.short-icon::after {
  content: '';
  position: absolute;
  background: #FF9500;
}

.short-icon::before {
  width: 3rpx;
  height: 20rpx;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.short-icon::after {
  width: 12rpx;
  height: 12rpx;
  border-right: 3rpx solid #FF9500;
  border-bottom: 3rpx solid #FF9500;
  background: transparent;
  bottom: 2rpx;
  left: 50%;
  transform: translateX(-50%) rotate(45deg);
}

.type-name {
  font-size: 26rpx;
  color: #3C3C43;
  font-weight: 500;
}

.type-check {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: currentColor;
}

.buy .type-check { background: #34C759; }
.sell .type-check { background: #FF3B30; }
.long .type-check { background: #007AFF; }
.short .type-check { background: #FF9500; }

.type-check::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 12rpx;
  border-right: 2rpx solid #FFFFFF;
  border-bottom: 2rpx solid #FFFFFF;
  top: 4rpx;
  left: 7rpx;
  transform: rotate(45deg);
}

/* 风险提示 */
.risk-notice {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255, 204, 0, 0.15) 0%, rgba(255, 149, 0, 0.15) 100%);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 149, 0, 0.3);
}

.risk-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
  position: relative;
}

.risk-icon::before {
  content: '!';
  position: absolute;
  width: 100%;
  height: 100%;
  background: #FF9500;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 36rpx;
  text-align: center;
}

.risk-text {
  font-size: 26rpx;
  color: #92400E;
  line-height: 1.6;
  flex: 1;
}

/* 表单 */
.form-card {
  background: #FFFFFF;
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.input-group {
  margin-bottom: 32rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #1C1C1E;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.required {
  color: #FF3B30;
  margin-left: 4rpx;
}

.optional {
  font-size: 24rpx;
  color: #8E8E93;
  font-weight: 400;
  margin-left: 8rpx;
}

.points-badge {
  margin-left: auto;
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.1) 0%, rgba(88, 86, 214, 0.1) 100%);
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #007AFF;
}

.input-wrap {
  position: relative;
}

.input {
  width: 100%;
  height: 100rpx;
  padding: 0 28rpx;
  background: rgba(118, 118, 128, 0.08);
  border: none;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #1C1C1E;
  box-sizing: border-box;
  transition: all 0.2s;
}

.input:focus {
  background: rgba(0, 122, 255, 0.08);
}

.input::placeholder {
  color: #C7C7CC;
}

.input-count {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #C7C7CC;
}

.textarea-wrap {
  position: relative;
}

.textarea {
  width: 100%;
  height: 200rpx;
  padding: 24rpx;
  background: rgba(118, 118, 128, 0.08);
  border: none;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #1C1C1E;
  box-sizing: border-box;
}

.textarea::placeholder {
  color: #C7C7CC;
}

.textarea-count {
  position: absolute;
  right: 20rpx;
  bottom: 16rpx;
  font-size: 24rpx;
  color: #C7C7CC;
}

.price-input-wrap {
  display: flex;
  align-items: center;
  background: rgba(118, 118, 128, 0.08);
  border-radius: 20rpx;
  padding-left: 24rpx;
}

.price-prefix {
  font-size: 40rpx;
  font-weight: 700;
  color: #FF3B30;
}

.price-input {
  flex: 1;
  background: transparent;
  padding-left: 12rpx;
}

.days-input-wrap {
  display: flex;
  align-items: center;
  background: rgba(118, 118, 128, 0.08);
  border-radius: 20rpx;
  padding-right: 24rpx;
}

.days-input {
  flex: 1;
  background: transparent;
}

.days-suffix {
  font-size: 28rpx;
  color: #8E8E93;
  font-weight: 500;
}

.slider-wrap {
  padding: 16rpx 0;
}

.slider-track {
  padding: 0 8rpx;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #8E8E93;
}

.slider-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #007AFF;
}

.input-tip {
  font-size: 24rpx;
  color: #8E8E93;
  margin-top: 12rpx;
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.06);
}

.cost-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.cost-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
  background: linear-gradient(135deg, #FF9500 0%, #FF6B00 100%);
  border-radius: 50%;
  position: relative;
}

.cost-icon::before {
  content: '¥';
  position: absolute;
  font-size: 22rpx;
  font-weight: 700;
  color: #FFFFFF;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.cost-label {
  font-size: 26rpx;
  color: #8E8E93;
  margin-right: 8rpx;
}

.cost-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #FF9500;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display';
}

.publish-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 280rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
  transition: all 0.25s;
}

.publish-btn:active {
  transform: scale(0.98);
}

.publish-btn[disabled] {
  background: #E5E5EA;
  color: #8E8E93;
  box-shadow: none;
}
