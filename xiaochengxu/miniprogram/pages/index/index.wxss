/* iOS 风格首页 - 科技感设计 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #F8F9FA 0%, #F2F2F7 100%);
}

/* 搜索栏 */
.search-bar {
  padding: 16rpx 24rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid rgba(60, 60, 67, 0.06);
}

.search-wrap {
  display: flex;
  align-items: center;
  background: rgba(118, 118, 128, 0.08);
  border-radius: 24rpx;
  padding: 18rpx 24rpx;
  transition: all 0.3s ease;
}

.search-wrap:active {
  background: rgba(118, 118, 128, 0.12);
  transform: scale(0.99);
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  color: #1C1C1E;
  margin-left: 16rpx;
}

.search-input::placeholder {
  color: #8E8E93;
}

/* 筛选标签 */
.filter-scroll {
  background: #FFFFFF;
  white-space: nowrap;
  border-bottom: 1rpx solid rgba(60, 60, 67, 0.06);
}

.filter-tabs {
  display: inline-flex;
  padding: 20rpx 24rpx;
  gap: 16rpx;
}

.filter-tab {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 14rpx 36rpx;
  font-size: 28rpx;
  color: #3C3C43;
  background: rgba(118, 118, 128, 0.08);
  border-radius: 40rpx;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
}

.filter-tab:active {
  transform: scale(0.95);
}

.filter-tab.active {
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
}

/* 公告 */
.notice {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, rgba(255, 204, 0, 0.1) 0%, rgba(255, 149, 0, 0.1) 100%);
  margin: 16rpx 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 149, 0, 0.2);
}

.notice-icon-wrap {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}

.notice-dot {
  width: 12rpx;
  height: 12rpx;
  background: #FF9500;
  border-radius: 50%;
  animation: pulse-dot 2s ease-in-out infinite;
}

@keyframes pulse-dot {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.5); opacity: 0.6; }
}

.notice-text {
  flex: 1;
  font-size: 26rpx;
  color: #B8860B;
  font-weight: 500;
}

/* 列表 */
.list {
  flex: 1;
  padding: 0 24rpx 24rpx;
}

/* 卡片 */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-top: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #007AFF, #5856D6);
  opacity: 0;
  transition: opacity 0.3s;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.card:active::before {
  opacity: 1;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.type-tag {
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.type-1 { 
  background: linear-gradient(135deg, rgba(52, 199, 89, 0.15) 0%, rgba(48, 209, 88, 0.15) 100%);
  color: #248A3D;
}
.type-2 { 
  background: linear-gradient(135deg, rgba(255, 59, 48, 0.15) 0%, rgba(255, 69, 58, 0.15) 100%);
  color: #D70015;
}
.type-3 { 
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.15) 0%, rgba(10, 132, 255, 0.15) 100%);
  color: #0040DD;
}
.type-4 { 
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.15) 0%, rgba(255, 159, 10, 0.15) 100%);
  color: #C93400;
}

.price {
  font-size: 40rpx;
  font-weight: 700;
  color: #FF3B30;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display';
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tag {
  padding: 8rpx 18rpx;
  background: rgba(118, 118, 128, 0.08);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #636366;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(60, 60, 67, 0.06);
}

.meta {
  display: flex;
  gap: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #8E8E93;
}

.meta-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  position: relative;
}

.meta-icon.eye::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 12rpx;
  border: 2rpx solid #8E8E93;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.meta-icon.eye::after {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: #8E8E93;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.meta-icon.calendar::before {
  content: '';
  position: absolute;
  width: 18rpx;
  height: 14rpx;
  border: 2rpx solid #8E8E93;
  border-radius: 4rpx;
  top: 55%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.meta-icon.calendar::after {
  content: '';
  position: absolute;
  width: 14rpx;
  height: 2rpx;
  background: #8E8E93;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
}

.time {
  font-size: 24rpx;
  color: #C7C7CC;
}

/* 加载状态 */
.loading-wrap {
  padding: 40rpx 0;
}

.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #C7C7CC;
  font-size: 24rpx;
  gap: 16rpx;
}

.no-more-line {
  width: 60rpx;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #C7C7CC, transparent);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 160rpx 40rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  position: relative;
}

.empty-box {
  width: 100%;
  height: 100%;
  border: 4rpx solid #E5E5EA;
  border-radius: 24rpx;
  position: relative;
}

.empty-box::before {
  content: '';
  position: absolute;
  width: 40%;
  height: 4rpx;
  background: #E5E5EA;
  top: 35%;
  left: 30%;
}

.empty-box::after {
  content: '';
  position: absolute;
  width: 60%;
  height: 4rpx;
  background: #E5E5EA;
  top: 55%;
  left: 20%;
}

.empty-text {
  font-size: 32rpx;
  color: #8E8E93;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #C7C7CC;
}
