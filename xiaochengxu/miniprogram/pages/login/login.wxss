/* iOS 风格登录页 - 简洁设计 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F8F9FA 0%, #F2F2F7 100%);
  padding: 0 32rpx;
  padding-top: env(safe-area-inset-top);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 500rpx;
  overflow: hidden;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.6;
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.1) 0%, rgba(88, 86, 214, 0.1) 100%);
  top: -100rpx;
  right: -50rpx;
  animation: float 6s ease-in-out infinite;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, rgba(52, 199, 89, 0.1) 0%, rgba(48, 209, 88, 0.1) 100%);
  top: 100rpx;
  left: -80rpx;
  animation: float 8s ease-in-out infinite reverse;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.1) 0%, rgba(255, 159, 10, 0.1) 100%);
  top: 200rpx;
  right: 60rpx;
  animation: float 7s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-20rpx) scale(1.05); }
}

/* 头部 */
.header {
  padding: 100rpx 0 60rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.logo-wrap {
  position: relative;
  display: inline-block;
  margin-bottom: 24rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(0, 122, 255, 0.3);
  position: relative;
  z-index: 1;
}

.logo-icon {
  font-size: 80rpx;
  filter: grayscale(100%) brightness(200%);
}

.logo-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(0, 122, 255, 0.2) 0%, transparent 70%);
  transform: translate(-50%, -50%);
  animation: glow-pulse 3s ease-in-out infinite;
}

@keyframes glow-pulse {
  0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
  50% { opacity: 1; transform: translate(-50%, -50%) scale(1.2); }
}

.app-name {
  font-size: 52rpx;
  font-weight: 700;
  color: #1C1C1E;
  letter-spacing: 4rpx;
  margin-bottom: 12rpx;
}

.slogan {
  font-size: 28rpx;
  color: #8E8E93;
  letter-spacing: 2rpx;
}

/* 登录卡片 */
.login-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  margin-top: 40rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1C1C1E;
  text-align: center;
  margin-bottom: 12rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #8E8E93;
  text-align: center;
  margin-bottom: 48rpx;
}

/* 微信登录按钮 */
.wechat-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 108rpx;
  background: linear-gradient(135deg, #07C160 0%, #06AD56 100%);
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 28rpx;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(7, 193, 96, 0.35);
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.wechat-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.4);
}

.wechat-icon {
  width: 48rpx;
  height: 40rpx;
  margin-right: 16rpx;
  background: #FFFFFF;
  border-radius: 50% 50% 50% 20%;
  position: relative;
}

.wechat-icon::before,
.wechat-icon::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background: #07C160;
  border-radius: 50%;
  top: 35%;
}

.wechat-icon::before {
  left: 22%;
}

.wechat-icon::after {
  right: 22%;
}

/* 功能特点 */
.login-features {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-top: 48rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid rgba(60, 60, 67, 0.06);
}

.feature-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #8E8E93;
}

.feature-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  position: relative;
}

.feature-icon.check {
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  border-radius: 50%;
}

.feature-icon.check::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 14rpx;
  border-right: 3rpx solid #FFFFFF;
  border-bottom: 3rpx solid #FFFFFF;
  top: 5rpx;
  left: 9rpx;
  transform: rotate(45deg);
}

/* 协议 */
.agreement-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 48rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #8E8E93;
}

.agreement-link {
  font-size: 24rpx;
  color: #007AFF;
}
