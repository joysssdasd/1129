.container {
  min-height: 100vh;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.highlight {
  color: #4f46e5;
  font-weight: 500;
}

.warning {
  color: #ef4444;
  font-weight: 500;
}

.update-time {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 60rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}
