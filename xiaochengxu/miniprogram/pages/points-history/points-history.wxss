.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 积分概览 */
.points-overview {
  background: linear-gradient(135deg, #4f46e5, #7c3aed);
  padding: 50rpx 40rpx;
  color: #fff;
}

.overview-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.overview-value {
  font-size: 72rpx;
  font-weight: 700;
  margin-top: 10rpx;
}

/* 记录列表 */
.transaction-list {
  padding: 20rpx;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.transaction-info {
  flex: 1;
}

.transaction-desc {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.transaction-time {
  font-size: 24rpx;
  color: #999;
}

.transaction-amount {
  font-size: 36rpx;
  font-weight: 700;
}

.transaction-amount.positive {
  color: #10b981;
}

.transaction-amount.negative {
  color: #ef4444;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx;
  color: #ccc;
  font-size: 24rpx;
}
