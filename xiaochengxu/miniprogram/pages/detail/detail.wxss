/* iOS 风格详情页 - 科技感设计 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F8F9FA 0%, #F2F2F7 100%);
  padding: 24rpx;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

/* 帖子卡片 */
.post-card {
  background: #FFFFFF;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.trade-type-tag {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.trade-type-tag.type-1 {
  background: linear-gradient(135deg, rgba(52, 199, 89, 0.15) 0%, rgba(48, 209, 88, 0.15) 100%);
  color: #248A3D;
}

.trade-type-tag.type-2 {
  background: linear-gradient(135deg, rgba(255, 59, 48, 0.15) 0%, rgba(255, 69, 58, 0.15) 100%);
  color: #D70015;
}

.trade-type-tag.type-3 {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.15) 0%, rgba(10, 132, 255, 0.15) 100%);
  color: #0040DD;
}

.trade-type-tag.type-4 {
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.15) 0%, rgba(255, 159, 10, 0.15) 100%);
  color: #C93400;
}

.type-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: currentColor;
  margin-right: 12rpx;
  animation: pulse-dot 2s ease-in-out infinite;
}

@keyframes pulse-dot {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.3); opacity: 0.7; }
}

.post-price {
  font-size: 48rpx;
  font-weight: 700;
  color: #FF3B30;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display';
}

.post-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.post-keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.keyword {
  padding: 10rpx 20rpx;
  background: rgba(118, 118, 128, 0.08);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #636366;
}

.post-extra {
  padding: 24rpx;
  background: rgba(118, 118, 128, 0.06);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}

.extra-label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #8E8E93;
  margin-bottom: 12rpx;
}

.extra-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  border: 2rpx solid #8E8E93;
  border-radius: 4rpx;
}

.extra-content {
  font-size: 28rpx;
  color: #3C3C43;
  line-height: 1.6;
}

.post-meta-list {
  border-top: 1rpx solid rgba(60, 60, 67, 0.06);
  padding-top: 24rpx;
}

.meta-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.meta-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.views-icon::before {
  content: '';
  width: 24rpx;
  height: 16rpx;
  border: 2rpx solid #8E8E93;
  border-radius: 50%;
}

.views-icon::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background: #8E8E93;
  border-radius: 50%;
}

.calendar-icon::before {
  content: '';
  width: 22rpx;
  height: 18rpx;
  border: 2rpx solid #8E8E93;
  border-radius: 4rpx;
}

.time-icon::before {
  content: '';
  width: 22rpx;
  height: 22rpx;
  border: 2rpx solid #8E8E93;
  border-radius: 50%;
}

.time-icon::after {
  content: '';
  position: absolute;
  width: 2rpx;
  height: 10rpx;
  background: #8E8E93;
  top: 30%;
}

.expire-icon::before {
  content: '';
  width: 22rpx;
  height: 22rpx;
  border: 2rpx solid #8E8E93;
  border-radius: 50%;
}

.meta-label {
  flex: 1;
  font-size: 28rpx;
  color: #8E8E93;
}

.meta-value {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 500;
}

.meta-value.highlight {
  color: #007AFF;
  font-weight: 600;
}

/* 联系方式卡片 */
.contact-card {
  background: #FFFFFF;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.contact-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.contact-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
}

.contact-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  border-radius: 10rpx;
  position: relative;
}

.contact-icon::before {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 12rpx;
  background: #FFFFFF;
  border-radius: 50% 50% 50% 20%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.contact-cost {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #8E8E93;
}

.cost-coin {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  border: 2rpx solid #FF9500;
  border-radius: 50%;
  position: relative;
}

.cost-coin::before {
  content: '¥';
  position: absolute;
  font-size: 14rpx;
  font-weight: 700;
  color: #FF9500;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.contact-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(52, 199, 89, 0.1) 0%, rgba(48, 209, 88, 0.1) 100%);
  border-radius: 20rpx;
  border: 1rpx solid rgba(52, 199, 89, 0.2);
}

.contact-info {
  flex: 1;
}

.wechat-badge {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #8E8E93;
  margin-bottom: 8rpx;
}

.wechat-icon {
  width: 28rpx;
  height: 22rpx;
  margin-right: 8rpx;
  background: #07C160;
  border-radius: 50% 50% 50% 20%;
}

.phone-badge {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #8E8E93;
  margin-bottom: 8rpx;
}

.phone-icon {
  width: 24rpx;
  height: 32rpx;
  margin-right: 8rpx;
  border: 2rpx solid #007AFF;
  border-radius: 4rpx;
  position: relative;
}

.phone-icon::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 2rpx;
  background: #007AFF;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
}

.contact-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #34C759;
  letter-spacing: 2rpx;
}

.copy-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(52, 199, 89, 0.3);
}

.copy-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  position: relative;
}

.copy-icon::before,
.copy-icon::after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 20rpx;
  border: 2rpx solid #FFFFFF;
  border-radius: 4rpx;
}

.copy-icon::before {
  top: 0;
  right: 0;
}

.copy-icon::after {
  bottom: 0;
  left: 0;
  background: #30D158;
}

.view-contact-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}

.view-contact-btn:active {
  transform: scale(0.98);
}

.view-contact-btn[disabled] {
  background: #E5E5EA;
  color: #8E8E93;
  box-shadow: none;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  position: relative;
}

.eye-icon::before {
  content: '';
  position: absolute;
  width: 28rpx;
  height: 18rpx;
  border: 3rpx solid #FFFFFF;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.eye-icon::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background: #FFFFFF;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 风险提示 */
.risk-notice {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255, 204, 0, 0.15) 0%, rgba(255, 149, 0, 0.15) 100%);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 149, 0, 0.3);
}

.risk-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  background: #FF9500;
  border-radius: 50%;
  position: relative;
}

.risk-icon::before {
  content: '!';
  position: absolute;
  font-size: 24rpx;
  font-weight: 700;
  color: #FFFFFF;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.risk-text {
  font-size: 26rpx;
  color: #92400E;
  line-height: 1.6;
}

/* 免责声明 */
.disclaimer {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: rgba(118, 118, 128, 0.06);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}

.disclaimer-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
  border: 2rpx solid #8E8E93;
  border-radius: 50%;
  position: relative;
}

.disclaimer-icon::before {
  content: 'i';
  position: absolute;
  font-size: 18rpx;
  font-weight: 700;
  color: #8E8E93;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.disclaimer-text {
  flex: 1;
  font-size: 24rpx;
  color: #8E8E93;
}

.report-link {
  font-size: 24rpx;
  color: #FF3B30;
  font-weight: 500;
}

/* 分享按钮 */
.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  font-size: 30rpx;
  color: #1C1C1E;
  font-weight: 500;
  border: none;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.share-btn:active {
  background: #F2F2F7;
}

.share-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  position: relative;
}

.share-icon::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-top: 3rpx solid #007AFF;
  border-right: 3rpx solid #007AFF;
  transform: rotate(-45deg);
  top: 30%;
  left: 25%;
}

.share-icon::after {
  content: '';
  position: absolute;
  width: 3rpx;
  height: 20rpx;
  background: #007AFF;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4rpx);
}

.modal-content {
  width: 85%;
  background: #FFFFFF;
  border-radius: 28rpx;
  overflow: hidden;
  animation: modal-in 0.3s ease;
}

@keyframes modal-in {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 32rpx 24rpx;
}

.modal-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  position: relative;
}

.modal-icon.warning {
  background: linear-gradient(135deg, #FF9500 0%, #FF6B00 100%);
}

.modal-icon.warning::before {
  content: '!';
  position: absolute;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.modal-icon.report {
  background: linear-gradient(135deg, #FF3B30 0%, #FF453A 100%);
}

.modal-icon.report::before {
  content: '⚠';
  position: absolute;
  font-size: 40rpx;
  color: #FFFFFF;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1C1C1E;
}

.modal-body {
  padding: 0 32rpx 32rpx;
}

.risk-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #3C3C43;
  line-height: 2.2;
}

.risk-bullet {
  width: 8rpx;
  height: 8rpx;
  background: #FF9500;
  border-radius: 50%;
  margin-right: 16rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid rgba(60, 60, 67, 0.06);
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
  background: #FFFFFF;
}

.modal-btn.cancel {
  color: #8E8E93;
  border-right: 1rpx solid rgba(60, 60, 67, 0.06);
}

.modal-btn.confirm {
  color: #007AFF;
  font-weight: 600;
}

/* 举报类型 */
.report-types {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.report-type {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx;
  background: rgba(118, 118, 128, 0.08);
  border: 2rpx solid transparent;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #3C3C43;
  transition: all 0.2s;
}

.report-type:active {
  transform: scale(0.98);
}

.report-type.active {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.1) 0%, rgba(88, 86, 214, 0.1) 100%);
  border-color: #007AFF;
  color: #007AFF;
}

.report-check {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
  background: #007AFF;
  border-radius: 50%;
  position: relative;
}

.report-check::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 12rpx;
  border-right: 2rpx solid #FFFFFF;
  border-bottom: 2rpx solid #FFFFFF;
  top: 4rpx;
  left: 7rpx;
  transform: rotate(45deg);
}

.report-textarea {
  width: 100%;
  height: 180rpx;
  padding: 24rpx;
  background: rgba(118, 118, 128, 0.08);
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #1C1C1E;
  box-sizing: border-box;
}

.report-textarea::placeholder {
  color: #C7C7CC;
}
