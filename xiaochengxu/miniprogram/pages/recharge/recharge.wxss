.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 当前积分 */
.current-points {
  background: linear-gradient(135deg, #4f46e5, #7c3aed);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  color: #fff;
}

.points-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.points-value {
  font-size: 64rpx;
  font-weight: 700;
  margin-top: 10rpx;
}

/* 充值选项 */
.section {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.amount-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.amount-item {
  background: #f8f9fa;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.2s;
}

.amount-item.active {
  background: #eef2ff;
  border-color: #4f46e5;
}

.amount-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.amount-points {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.amount-bonus {
  font-size: 22rpx;
  color: #10b981;
  margin-top: 4rpx;
}

/* 自定义金额 */
.custom-input-wrap {
  margin-top: 24rpx;
}

.custom-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.custom-input {
  background: #f8f9fa;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 30rpx;
}

.custom-input.active {
  border-color: #4f46e5;
  background: #eef2ff;
}

.custom-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 收款二维码 */
.qrcode-grid {
  display: flex;
  gap: 30rpx;
}

.qrcode-item {
  flex: 1;
  text-align: center;
}

.qrcode-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.qrcode-placeholder {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

.qrcode-label {
  font-size: 26rpx;
  color: #666;
  margin-top: 12rpx;
}

.qrcode-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  text-align: center;
}

/* 上传截图 */
.upload-area {
  border: 2rpx dashed #d1d5db;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  background: #fafafa;
}

.upload-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
}

.screenshot-preview {
  position: relative;
  display: inline-block;
}

.screenshot-image {
  max-width: 300rpx;
  max-height: 400rpx;
  border-radius: 12rpx;
}

.screenshot-remove {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 48rpx;
  height: 48rpx;
  background: #ef4444;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

/* 提交按钮 */
.submit-section {
  margin-top: 40rpx;
}

.points-preview {
  text-align: center;
  margin-bottom: 24rpx;
}

.preview-label {
  font-size: 28rpx;
  color: #666;
}

.preview-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #4f46e5;
  margin-left: 12rpx;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #4f46e5, #7c3aed);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 28rpx 0;
  font-size: 32rpx;
  font-weight: 500;
}

.submit-btn[disabled] {
  opacity: 0.6;
}
