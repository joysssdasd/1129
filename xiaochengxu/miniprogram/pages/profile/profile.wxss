/* ÂºπÁ™óÊ†∑Âºè */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4rpx);
}

.modal-content {
  width: 85%;
  background: #FFFFFF;
  border-radius: 28rpx;
  overflow: hidden;
  animation: modal-in 0.3s ease;
}

@keyframes modal-in {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-header {
  padding: 32rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(60, 60, 67, 0.06);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1C1C1E;
}

.modal-body {
  padding: 32rpx;
}

.modal-tip {
  font-size: 26rpx;
  color: #8E8E93;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.modal-input {
  width: 100%;
  height: 100rpx;
  padding: 0 24rpx;
  background: rgba(118, 118, 128, 0.08);
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #1C1C1E;
  box-sizing: border-box;
}

.modal-input::placeholder {
  color: #C7C7CC;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid rgba(60, 60, 67, 0.06);
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
  background: #FFFFFF;
}

.modal-btn.cancel {
  color: #8E8E93;
  border-right: 1rpx solid rgba(60, 60, 67, 0.06);
}

.modal-btn.confirm {
  color: #007AFF;
  font-weight: 600;
}
