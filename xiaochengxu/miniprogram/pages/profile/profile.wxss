  font-size: 26rpx;
  font-weight: 500;
  border-radius: 20rpx;
  border: none;
}

.copy-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  position: relative;
}

.copy-icon::before,
.copy-icon::after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 20rpx;
  border: 2rpx solid #FFFFFF;
  border-radius: 4rpx;
}

.copy-icon::before {
  top: 0;
  right: 0;
}

.copy-icon::after {
  bottom: 0;
  left: 0;
  background: #5856D6;
}

