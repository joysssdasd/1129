.container {
  min-height: 100vh;
  background: #F2F2F7;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
  position: relative;
}

/* Â§¥ÈÉ®ËÉåÊôØ */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 360rpx;
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  border-radius: 0 0 60rpx 60rpx;
}

/* Êú™ÁôªÂΩïÊèêÁ§∫ */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  position: relative;
  z-index: 1;
}

.prompt-avatar {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  position: relative;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  border: 4rpx dashed rgba(255, 255, 255, 0.5);
}

.avatar-placeholder::before {
  content: '';
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
}

.avatar-placeholder::after {
  content: '';
  position: absolute;
  width: 80rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 40rpx 40rpx 0 0;
  bottom: 20%;
  left: 50%;
  transform: translateX(-50%);
}

.prompt-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 40rpx;
}

.login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 64rpx;
  background: #FFFFFF;
  color: #007AFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.btn-arrow {
  width: 24rpx;
  height: 24rpx;
  border-top: 3rpx solid #007AFF;
  border-right: 3rpx solid #007AFF;
  transform: rotate(45deg);
  margin-left: 12rpx;
}

/* Áî®Êà∑Âç°Áâá */
.user-card {
  display: flex;
  align-items: center;
  margin: 100rpx 24rpx 24rpx;
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 28rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 1;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  position: relative;
}

.avatar-inner {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.avatar-ring {
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  right: -6rpx;
  bottom: -6rpx;
  border: 3rpx solid rgba(0, 122, 255, 0.3);
  border-radius: 50%;
  animation: ring-pulse 2s ease-in-out infinite;
}

@keyframes ring-pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.05); opacity: 0.5; }
}

.user-info {
  flex: 1;
}

.phone {
  font-size: 36rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 12rpx;
}

.stats {
  display: flex;
  align-items: center;
}

.stat-item {
  display: flex;
  align-items: baseline;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #007AFF;
  margin-right: 6rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #8E8E93;
}

.stat-divider {
  width: 1rpx;
  height: 24rpx;
  background: #E5E5EA;
  margin: 0 24rpx;
}

/* ÁßØÂàÜÂç°Áâá */
.points-card {
  margin: 0 24rpx 24rpx;
  border-radius: 28rpx;
  overflow: hidden;
  position: relative;
}

.points-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #FF9500 0%, #FF6B00 100%);
}

.points-bg::before {
  content: '';
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  top: -60rpx;
  right: -40rpx;
}

.points-bg::after {
  content: '';
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  bottom: -40rpx;
  left: 20rpx;
}

.points-content {
  position: relative;
  z-index: 1;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.points-info {
  color: #FFFFFF;
}

.points-label {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  display: block;
}

.points-value-wrap {
  display: flex;
  align-items: center;
}

.points-value {
  font-size: 56rpx;
  font-weight: 700;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display';
}

.points-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  position: relative;
}

.points-icon::before {
  content: '¬•';
  position: absolute;
  font-size: 18rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.8);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.points-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 28rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 24rpx;
  border: none;
  backdrop-filter: blur(10rpx);
}

.action-btn.primary {
  background: #FFFFFF;
  color: #FF9500;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  position: relative;
}

.recharge-icon::before {
  content: '+';
  font-size: 28rpx;
  font-weight: 700;
  color: #FF9500;
}

.history-icon::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid currentColor;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.history-icon::after {
  content: '';
  position: absolute;
  width: 2rpx;
  height: 10rpx;
  background: currentColor;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
}

