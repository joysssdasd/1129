/* iOS 风格个人中心 */
.container {
  min-height: 100vh;
  background-color: #F2F2F7;
  padding-bottom: env(safe-area-inset-bottom);
  overflow-x: hidden;
}

/* 头部区域 */
.profile-header {
  background-color: #F2F2F7;
  padding-bottom: 20rpx;
}

/* 登录后用户信息 */
.user-info-section {
  display: flex;
  align-items: center;
  padding: 40rpx 48rpx;
  background: #FFFFFF;
  margin-bottom: 2rpx;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #007AFF, #5856D6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.2);
}

.avatar-text-large {
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: 700;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 26rpx;
  color: #8E8E93;
}

/* 统计行 */
.stats-row {
  display: flex;
  background: #FFFFFF;
  padding: 24rpx 0;
  align-items: center;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-num {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 4rpx;
}

.stat-lbl {
  font-size: 24rpx;
  color: #8E8E93;
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background-color: rgba(60, 60, 67, 0.1);
}

/* 未登录引导 */
.login-prompt-simple {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  padding: 48rpx 32rpx;
  margin: 32rpx;
  border-radius: 20rpx;
}

.login-avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  background-color: #E5E5EA;
  border-radius: 50%;
  margin-right: 24rpx;
}

.login-text-col {
  flex: 1;
}

.login-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #000000;
  display: block;
  margin-bottom: 4rpx;
}

.login-subtitle {
  font-size: 26rpx;
  color: #8E8E93;
}