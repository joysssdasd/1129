/* iOS 风格加载组件 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.4);
  z-index: 9999;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.loading-container.show {
  opacity: 1;
}

/* Inline Mode */
.loading-container.inline {
  position: static;
  background: transparent;
  display: inline-flex;
  width: auto;
  height: auto;
  padding: 0;
  z-index: 1;
}

.loading-container.inline .loading-content {
  background: transparent;
  box-shadow: none;
  backdrop-filter: none;
  padding: 0;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 60rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(20rpx);
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #1C1C1E;
}

/* ===== iOS Spinner ===== */
.spinner-wrap {
  width: 60rpx;
  height: 60rpx;
  position: relative;
}

.spinner {
  width: 100%;
  height: 100%;
  position: relative;
}

.spinner-blade {
  position: absolute;
  left: 50%;
  top: 0;
  width: 4rpx;
  height: 16rpx;
  margin-left: -2rpx;
  background: #8E8E93;
  border-radius: 2rpx;
  transform-origin: center 30rpx;
  animation: spinner-fade 1.2s linear infinite;
}

@keyframes spinner-fade {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.25; }
}

/* ===== Dots Animation ===== */
.dots-wrap {
  display: flex;
  gap: 12rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: #007AFF;
  border-radius: 50%;
  animation: dots-bounce 1.4s ease-in-out infinite;
}

.dot:nth-child(1) { animation-delay: 0s; }
.dot:nth-child(2) { animation-delay: 0.16s; }
.dot:nth-child(3) { animation-delay: 0.32s; }

@keyframes dots-bounce {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* ===== Wave Animation ===== */
.wave-wrap {
  display: flex;
  align-items: flex-end;
  gap: 6rpx;
  height: 50rpx;
}

.wave-bar {
  width: 8rpx;
  height: 20rpx;
  background: linear-gradient(180deg, #007AFF, #5856D6);
  border-radius: 4rpx;
  animation: wave 1.2s ease-in-out infinite;
}

.wave-bar:nth-child(1) { animation-delay: 0s; }
.wave-bar:nth-child(2) { animation-delay: 0.1s; }
.wave-bar:nth-child(3) { animation-delay: 0.2s; }
.wave-bar:nth-child(4) { animation-delay: 0.3s; }
.wave-bar:nth-child(5) { animation-delay: 0.4s; }

@keyframes wave {
  0%, 100% { height: 20rpx; }
  50% { height: 50rpx; }
}

/* ===== Ring Animation ===== */
.ring-wrap {
  width: 60rpx;
  height: 60rpx;
}

.ring {
  width: 100%;
  height: 100%;
  border: 4rpx solid rgba(0, 122, 255, 0.2);
  border-top-color: #007AFF;
  border-radius: 50%;
  animation: ring-spin 0.8s linear infinite;
}

@keyframes ring-spin {
  to { transform: rotate(360deg); }
}
