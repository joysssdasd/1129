/* iOS 风格图标组件 */
.icon-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.icon {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ===== 首页图标 ===== */
.icon.home .house {
  width: 60%;
  height: 45%;
  background: var(--color);
  border-radius: 4rpx;
  position: absolute;
  bottom: 10%;
}

.icon.home .roof {
  width: 0;
  height: 0;
  border-left: 40% solid transparent;
  border-right: 40% solid transparent;
  border-bottom: 30% solid var(--color);
  position: absolute;
  top: 15%;
}

/* ===== 发布图标 ===== */
.icon.publish .circle {
  width: 80%;
  height: 80%;
  border: 4rpx solid var(--color);
  border-radius: 50%;
  position: absolute;
}

.icon.publish .plus-h,
.icon.publish .plus-v {
  background: var(--color);
  position: absolute;
  border-radius: 2rpx;
}

.icon.publish .plus-h {
  width: 40%;
  height: 8%;
}

.icon.publish .plus-v {
  width: 8%;
  height: 40%;
}

/* ===== 我的图标 ===== */
.icon.profile .head {
  width: 35%;
  height: 35%;
  background: var(--color);
  border-radius: 50%;
  position: absolute;
  top: 15%;
}

.icon.profile .body {
  width: 60%;
  height: 35%;
  background: var(--color);
  border-radius: 50% 50% 0 0;
  position: absolute;
  bottom: 10%;
}

/* ===== 搜索图标 ===== */
.icon.search .glass {
  width: 55%;
  height: 55%;
  border: 4rpx solid var(--color);
  border-radius: 50%;
  position: absolute;
  top: 10%;
  left: 10%;
}

.icon.search .handle {
  width: 30%;
  height: 6rpx;
  background: var(--color);
  position: absolute;
  bottom: 18%;
  right: 12%;
  transform: rotate(45deg);
  border-radius: 3rpx;
}

/* ===== 积分图标 ===== */
.icon.coin .coin-body {
  width: 70%;
  height: 70%;
  border: 4rpx solid var(--color);
  border-radius: 50%;
  position: absolute;
}

.icon.coin .coin-symbol {
  font-size: 50%;
  font-weight: 700;
  color: var(--color);
  position: absolute;
}

/* ===== 钱包图标 ===== */
.icon.wallet .wallet-body {
  width: 75%;
  height: 55%;
  background: var(--color);
  border-radius: 8rpx;
  position: absolute;
  bottom: 15%;
}

.icon.wallet .wallet-flap {
  width: 60%;
  height: 20%;
  background: var(--color);
  border-radius: 4rpx 4rpx 0 0;
  position: absolute;
  top: 20%;
}

/* ===== 文档图标 ===== */
.icon.document .doc-body {
  width: 60%;
  height: 75%;
  border: 3rpx solid var(--color);
  border-radius: 4rpx;
  position: absolute;
}

.icon.document .doc-lines {
  width: 35%;
  height: 3rpx;
  background: var(--color);
  position: absolute;
  box-shadow: 0 10rpx 0 var(--color), 0 20rpx 0 var(--color);
}

/* ===== 设置图标 ===== */
.icon.settings .gear {
  width: 60%;
  height: 60%;
  border: 4rpx solid var(--color);
  border-radius: 50%;
  position: relative;
}

.icon.settings .gear::before,
.icon.settings .gear::after {
  content: '';
  position: absolute;
  background: var(--color);
}

.icon.settings .gear::before {
  width: 120%;
  height: 15%;
  top: 42.5%;
  left: -10%;
}

.icon.settings .gear::after {
  width: 15%;
  height: 120%;
  top: -10%;
  left: 42.5%;
}

/* ===== 箭头图标 ===== */
.icon.arrow-right .arrow {
  width: 30%;
  height: 30%;
  border-top: 4rpx solid var(--color);
  border-right: 4rpx solid var(--color);
  transform: rotate(45deg);
  margin-left: -10%;
}

/* ===== 微信图标 ===== */
.icon.wechat .wechat-body {
  width: 70%;
  height: 60%;
  background: var(--color);
  border-radius: 50% 50% 50% 20%;
  position: relative;
}

.icon.wechat .wechat-body::before {
  content: '';
  position: absolute;
  width: 15%;
  height: 15%;
  background: #fff;
  border-radius: 50%;
  top: 30%;
  left: 25%;
}

.icon.wechat .wechat-body::after {
  content: '';
  position: absolute;
  width: 15%;
  height: 15%;
  background: #fff;
  border-radius: 50%;
  top: 30%;
  right: 25%;
}

/* ===== 加载图标 ===== */
.icon.loading .spinner {
  width: 60%;
  height: 60%;
  border: 4rpx solid rgba(0, 0, 0, 0.1);
  border-top-color: var(--color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* ===== 成功图标 ===== */
.icon.success .check {
  width: 35%;
  height: 55%;
  border-bottom: 5rpx solid var(--color);
  border-right: 5rpx solid var(--color);
  transform: rotate(45deg);
  margin-top: -10%;
}

/* ===== 复制图标 ===== */
.icon.copy .copy-back,
.icon.copy .copy-front {
  width: 50%;
  height: 60%;
  border: 3rpx solid var(--color);
  border-radius: 4rpx;
  position: absolute;
}

.icon.copy .copy-back {
  top: 10%;
  right: 15%;
  background: transparent;
}

.icon.copy .copy-front {
  bottom: 10%;
  left: 15%;
  background: #fff;
}

/* ===== 动画效果 ===== */
.animated .icon {
  transition: transform 0.2s ease;
}

.animated:active .icon {
  transform: scale(0.9);
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.icon-wrap.pulse .icon {
  animation: pulse 1.5s ease-in-out infinite;
}

/* 弹跳动画 */
@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10%); }
}

.icon-wrap.bounce .icon {
  animation: bounce 0.6s ease-in-out infinite;
}

/* 渐变闪烁 */
@keyframes glow {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.6; }
}

.icon-wrap.glow .icon {
  animation: glow 1.5s ease-in-out infinite;
}
