/* iOS 风格按钮组件 */
.ios-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  border-radius: 24rpx;
  font-weight: 500;
  transition: all 0.15s ease;
  position: relative;
  overflow: hidden;
}

.ios-btn::after {
  border: none;
}

/* 点击效果 */
.ios-btn:active:not(.disabled):not(.loading) {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 涟漪效果 */
.ios-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.4s ease, height 0.4s ease;
}

.ios-btn:active::before {
  width: 200%;
  height: 200%;
}

/* 按钮内容 */
.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: inherit;
}

.btn-text {
  font-size: inherit;
}

/* ===== 类型样式 ===== */
.ios-btn.primary {
  background: #007AFF;
  color: #FFFFFF;
}

.ios-btn.secondary {
  background: rgba(118, 118, 128, 0.12);
  color: #1C1C1E;
}

.ios-btn.success {
  background: #34C759;
  color: #FFFFFF;
}

.ios-btn.warning {
  background: #FF9500;
  color: #FFFFFF;
}

.ios-btn.danger {
  background: #FF3B30;
  color: #FFFFFF;
}

.ios-btn.ghost {
  background: transparent;
  color: #007AFF;
  border: 2rpx solid #007AFF;
}

.ios-btn.text {
  background: transparent;
  color: #007AFF;
}

.ios-btn.wechat {
  background: #07C160;
  color: #FFFFFF;
}

/* ===== 尺寸样式 ===== */
.ios-btn.large {
  height: 100rpx;
  padding: 0 48rpx;
  font-size: 34rpx;
  border-radius: 28rpx;
}

.ios-btn.medium {
  height: 88rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
}

.ios-btn.small {
  height: 72rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  border-radius: 20rpx;
}

.ios-btn.mini {
  height: 56rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
}

/* ===== 禁用状态 ===== */
.ios-btn.disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* ===== 加载状态 ===== */
.ios-btn.loading {
  pointer-events: none;
}

.btn-loading {
  margin-right: 8rpx;
}

.btn-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: btn-spin 0.8s linear infinite;
}

.ios-btn.secondary .btn-spinner,
.ios-btn.ghost .btn-spinner,
.ios-btn.text .btn-spinner {
  border-color: rgba(0, 122, 255, 0.3);
  border-top-color: #007AFF;
}

@keyframes btn-spin {
  to { transform: rotate(360deg); }
}

/* ===== 渐变按钮 ===== */
.ios-btn.gradient {
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  color: #FFFFFF;
}

.ios-btn.gradient-warm {
  background: linear-gradient(135deg, #FF9500 0%, #FF3B30 100%);
  color: #FFFFFF;
}

.ios-btn.gradient-cool {
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  color: #FFFFFF;
}
